<div>
  <p class="text-error">
    <% if (messages.error) {%>
    <%= messages.error %>
        <% } %>
      </p>
</div>

    <!-- Email input -->
    <div class="form-outline mb-2">
      <input required name="email" type="email" id="form2Example1" class="form-control" />
      <label class="form-label" for="form2Example1">Email address</label>
    </div>
  
