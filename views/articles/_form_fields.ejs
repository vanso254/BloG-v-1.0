<div class="form-group">
    <label for="title">Title</label>
    <input required value="<%=article.title%>" name="title" type="text" id="title" class="form-control">
</div>
<div class="form-group">
    <label for="link">Link</label>
    <input value="<%=article.link%>" name="link" type="text" id="link" class="form-control">
</div>
<div class="form-group">
    <label for="description">Description</label>
    <textarea required name="description" id="description" class="form-control"><%=article.description%></textarea>
</div>
<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea required name="markdown" id="markdown" class="form-control"><%=article.markdown%></textarea>
</div>
<a href="/" class="btn btn-secondary mt-2">Cancel</a>
<button type="submit" class="btn btn-primary mt-2">Save</button>